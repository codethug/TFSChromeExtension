{
  "manifest_version": 2,

  "name": "TFS Enhancements",
  "description": "This extension enhances Team Foundation Service sites",
  "version": "1.0.7",
  "author": "Tim Larson, @codethug",
  "homepage_url": "https://github.com/codethug/TFSChromeExtension",

  "icons": {
	"128": "Visual Studio 2012-128.png"
  },
  
  "options_page": "options.html",
  
  "background": {
	"scripts": ["settings.js", "eventpage.js"],
	"persistent": false
  },
  
  "permissions": [
	"tabs",
    "activeTab",
	"storage",
	"https://*.visualstudio.com/"
  ],
  
  "content_scripts": [
	{
		"matches": ["https://*.visualstudio.com/*"],
		"css": ["content.css"],
		"js": ["content.js"],
		"run_at": "document_end"
	}
  ]
}